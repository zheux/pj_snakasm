section .text

; Bind a key to a procedure
%macro bind 2
  cmp byte [esp], %1
  jne %%next
  call %2
  %%next:
%endmacro

; Bind a gamestate to a procedure
%macro bind_state 2
  cmp byte [gamestate], %1
  jne %%next
  call %2
  %%next:
%endmacro


; Fill the screen with the given background color
%macro FILL_SCREEN 1
  push word %1
  call clear
  add esp, 2
%endmacro
